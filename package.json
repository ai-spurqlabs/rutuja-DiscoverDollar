{
  "name": "cantire-playwright",
  "version": "1.0.0",
  "description": "Cucumber + Playwright framework for Cantire",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "cucumber-js",
    "test:comment-module": "cucumber-js tests/features/CommentModule.feature",
    "test:smoke": "cucumber-js --tags @smoke",
    "test:regression": "cucumber-js --tags @regression",
    "report": "npx allure-commandline generate allure-results --clean -o allure-report",
    "playwright:install": "playwright install --with-deps",
    "ci:test": "npm run playwright:install && npm run test:comment-module"
  },
  "dependencies": {
    "@cucumber/cucumber": "12.2.0",
    "@playwright/test": "^1.55.0",
    "adm-zip": "^0.5.10",
    "allure-playwright": "^2.9.2",
    "csv-reader": "^1.0.9",
    "csv-stringify": "^6.4.4",
    "cucumber-html-reporter": "^5.5.0",
    "dotenv": "^16.3.1",
    "exceljs": "^4.3.0",
    "fs-extra": "^11.1.1",
    "glob": "^10.3.10",
    "multiple-cucumber-html-reporter": "^3.4.0",
    "otplib": "^12.0.1",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0"
  },
  "keywords": [
    "cucumber",
    "playwright",
    "automation",
    "testing"
  ],
  "author": "",
  "license": "ISC"
}
